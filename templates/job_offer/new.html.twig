{% extends 'base.html.twig' %}

{% block title %}Cr√©er une annonce{% endblock %}

{% block body %}

<h1 class="m-3 text-center">Publier une annonce</h1>
<div class="container-fluid col-lg-8">
    {{ form_start(form) }}
    <div class="mb-2 mt-4">
        {{ form_label(form.jobTitle, null, { 'label_attr': { 'class': 'form-label' }}) }}
        {{ form_widget(form.jobTitle, {'attr': { 'class': 'form-control'}}) }}
        {{ form_errors(form.jobTitle ) }}
    </div>
    <div class="mb-2 mt-4">
        {{ form_label(form.jobLocation, null, { 'label_attr': { 'class': 'form-label' }}) }}
        {{ form_widget(form.jobLocation, {'attr': { 'class': 'form-control'}}) }}
        {{ form_errors(form.jobLocation ) }}
    </div>
    <div class="mb-2 mt-4">
        {{ form_label(form.contractType, null, { 'label_attr': { 'class': 'form-label' }}) }}
        {{ form_widget(form.contractType, {'attr': { 'class': 'form-control'}}) }}
        {{ form_errors(form.contractType ) }}
    </div>
    <div class="mb-2 mt-4">
        {{ form_label(form.jobDescription, null, { 'label_attr': { 'class': 'form-label' }}) }}
        {{ form_widget(form.jobDescription, {'attr': { 'class': 'form-control'}}) }}
        {{ form_errors(form.jobDescription ) }}
    </div>
    <div class="mb-2 mt-4">
        {{ form_label(form.candidateExperience, null, { 'label_attr': { 'class': 'form-label' }}) }}
        {{ form_widget(form.candidateExperience, {'attr': { 'class': 'form-control'}}) }}
        {{ form_errors(form.candidateExperience ) }}
