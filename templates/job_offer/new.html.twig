        {{ form_label(form.salary, null, { 'label_attr': { 'class': 'form-label' }}) }}
        {{ form_widget(form.salary, {'attr': { 'class': 'form-control'}}) }}
        {{ form_errors(form.salary ) }}
    </div>
    <div class="mt-4 mb-5 d-flex justify-content-center">{{ form_widget(form.submit, { 'attr': {'class': 'btn btn-primary'} }) }}</div>
    {{ form_end(form) }}
</div>
{% endblock %}
