{% extends 'base.html.twig' %}

{% block title %}Mes annonces{% endblock %}

{% block body %}
    <div class="container-fluid col-lg-10 flex-wrap mt-5">
        <div class="card col-lg-10 text-center d-flex justify-content-center" style="width: 100%;">
            <div class="card-body">
                <h2 class="card-title">{{ job_offer.jobTitle }}</h2>
                <h3 class="card-subtitle mb-2 text-body-secondary">{{ job_offer.contractType ~ ' ' ~  job_offer.jobLocation }}</h3>
                <p class="card-text">{{ job_offer.jobDescription }} <br>
                    {{ job_offer.candidateExperience }}<br>
                    {{ job_offer.workingHours }}<br>
                    {{ job_offer.salary }}</p>
            </div>
        </div>

        <div class="col-lg-8 mt-5">
        <h2 class="mb-3">Candidatures pour cette annonce :</h2>
        <ul>
            {% for application in valid_applications %}
                <ul>
                    <li><a href="{{ '/uploads/resumes/' ~ application.getCandidateProfile().getResume() }}"
                           target="_blank">{{ application.getCandidateProfile().getLastName() ~ ' ' ~
                            application.getCandidateProfile().getFirstName() }}</a></li>
                </ul>
            {% else %}
                <li>Aucun candidat n'a postul√© pour cette annonce.</li>
            {% endfor %}
        </ul>
        </div>

    </div>
{% endblock %}
