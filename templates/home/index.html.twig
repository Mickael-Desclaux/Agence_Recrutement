{% extends 'base.html.twig' %}

{% block title %}Offres d'emplois{% endblock %}

{% block body %}
    <div>
        <h1>Offres d'emploi</h1>

        {% for job_offer in job_offers %}
            <div>
                <h2>{{ job_offer.jobTitle }}</h2>
                <p>{{ job_offer.jobLocation }}</p>
                <p>{{ job_offer.contractType }}</p>
                <p>{{ job_offer.jobDescription }}</p>
                <p>{{ job_offer.candidateExperience }}</p>
                <p>{{ job_offer.workingHours }}</p>
                <p>{{ job_offer.salary }}</p>
                {% if is_granted('ROLE_CANDIDATE') %}
                <a href="{{ path('job_offer_application', {'jobOfferId': job_offer.id}) }}">Envoyer ma candidature</a>
                {% endif %}
            </div>
        {% else %}
            <p>Aucune offre d'emploi disponible.</p>
        {% endfor %}
    </div>
{% endblock %}
