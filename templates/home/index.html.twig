{% extends 'base.html.twig' %}

{% block title %}Offres d'emplois{% endblock %}

{% block body %}

    <h1 class="m-5 text-center">Offres d'emploi</h1>
    <div class="container-fluid col-lg-8 d-flex justify-content-center text-center">
        {% for job_offer in job_offers %}
            <div class="card" style="width: 100%;">
                <div class="card-body">
                    <h2 class="card-title">{{ job_offer.jobTitle }}</h2>
                    <h3 class="card-subtitle mb-2 text-body-secondary">{{ job_offer.contractType ~ ' ' ~  job_offer.jobLocation }}</h3>
                    <a href="{{ path('job_offer_consultation', {'id': job_offer.id}) }}"
                       class="card-link">Voir l'annonce</a>
                </div>
            </div>
        {% else %}
            <p>Aucune offre d'emploi disponible.</p>
        {% endfor %}
    </div>
{% endblock %}
